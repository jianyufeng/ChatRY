<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:background="@color/android_bg_color"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp">

        <ImageView
            android:layout_marginTop="@dimen/android_width_8"
            android:id="@+id/tab_icon"
            android:layout_width="@dimen/android_width_86"
            android:layout_height="@dimen/android_width_86"
            android:src="@mipmap/ic_launcher"
            android:scaleType="fitCenter"
            android:layout_centerHorizontal="true"
            />
        <com.sanbafule.sharelock.view.RoundNumber
            android:id="@+id/myunreadtext"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_toRightOf="@+id/tab_icon"
            android:layout_marginLeft="-10dp"
             android:visibility="gone"
            />
    </RelativeLayout>
    <TextView
        android:id="@+id/tab_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginBottom="@dimen/android_width_5"
        android:textColor="@color/android_ciyao_text_color"
        android:textSize="12sp"/>


</LinearLayout>