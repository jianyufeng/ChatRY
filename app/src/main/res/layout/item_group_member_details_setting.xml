<?xml version="1.0" encoding="utf-8"?><!--群组设置项的集合  抽取的View 类 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_item_selector"
    android:baselineAligned="false"
    android:gravity="center_vertical"
    android:minHeight="@dimen/android_width_178"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/android_width_20"
        android:layout_marginRight="@dimen/android_width_20"
        android:gravity="center_vertical"
        android:minHeight="98dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/android_width_178">

            <ImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/android_width_110"
                android:layout_height="@dimen/android_width_110"
                android:layout_centerVertical="true"
                android:scaleType="fitXY"
                android:src="@drawable/group_default_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@id/icon"
                android:orientation="vertical"
                android:paddingLeft="@dimen/android_width_20">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/nick_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="10"
                        android:maxLines="1"
                        tools:text="fdfsfs"
                        android:textSize="@dimen/android_text_size_16"
                   />

                    <ImageView
                        android:id="@+id/level_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="@dimen/android_width_20"
                        android:scaleType="fitXY"
                        android:src="@drawable/android_my_level_icon" />

                    <TextView
                        android:id="@+id/level_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="@dimen/android_width_10"
                        android:layout_toRightOf="@+id/lv"
                        android:gravity="center"
                        android:textSize="@dimen/android_text_size_12"
                        tools:text="dds" />

                    <ImageView
                        android:id="@+id/manager_icon"
                        android:layout_width="15dp"
                        android:layout_height="15dp"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="@dimen/android_width_20"
                        android:scaleType="fitXY"
                        android:src="@drawable/android_my_management" />

                    <TextView
                        android:id="@+id/manager_tv"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="2dp"
                        android:layout_marginLeft="@dimen/android_width_10"
                        android:gravity="center"
                        android:textSize="@dimen/android_text_size_12"
                        tools:text="fsdfs" />
                </LinearLayout>

                <TextView
                    android:id="@+id/label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:maxLength="12"
                    android:singleLine="true"
                    android:textSize="@dimen/android_text_size_12"
                    android:visibility="gone"
                    tools:text="fddffds" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/third_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/android_ciyao_text_color"
                        android:textSize="@dimen/android_text_size_12" />

                    <TextView
                        android:id="@+id/account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:maxLength="25"
                        android:maxLines="1"
                        tools:text="fdsfsfds"
                        android:textColor="@color/android_ciyao_text_color"
                        android:textSize="@dimen/android_text_size_12"
               />
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/right_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:maxLines="1"
                    android:visibility="visible"
              />

                <ImageView
                    android:id="@+id/qrcode"
                    android:layout_width="@dimen/android_width_46"
                    android:layout_height="@dimen/android_width_46"
                    android:layout_marginLeft="@dimen/android_width_20"
                    android:scaleType="fitXY"
                    android:src="@drawable/android_my_qrcode"
                    android:visibility="visible" />

                <ImageView
                    android:id="@+id/next_page"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="@dimen/android_width_20"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_back_1" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/item_bottom_divider"
        style="@style/tv_line" />

</LinearLayout>