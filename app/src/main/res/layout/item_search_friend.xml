<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="@dimen/android_width_108"
              android:gravity="center_vertical"
              android:paddingLeft="@dimen/android_width_20"
              android:paddingRight="@dimen/android_width_20"
              android:background="@drawable/user_item_selector"
    >
    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/android_width_72"
        android:layout_height="@dimen/android_width_72"
        android:scaleType="fitXY"
        android:src="@drawable/icon_touxiang_persion_gray"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/android_width_20"
        android:ellipsize="end"
        android:gravity="center|left"
        android:maxLines="1"
        tools:text="sdfs"
        />

</LinearLayout>