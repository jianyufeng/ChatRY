<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/empty_view"
        android:layout_width="match_parent"
        android:layout_height="@dimen/android_width_72"
        android:ellipsize="end"
        android:gravity="center"
        android:maxLines="1"
        android:visibility="gone"
        android:text="暂无数据"
        android:textSize="@dimen/android_text_size_14" />


    <LinearLayout
        android:background="@drawable/user_item_selector"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:layout_marginTop="10dp"
        android:paddingLeft="@dimen/android_width_20"
        android:paddingRight="@dimen/android_width_20">

        <ImageView
            android:layout_width="@dimen/android_width_72"
            android:layout_height="@dimen/android_width_72"
            android:background="@drawable/ic_launcher"
            android:scaleType="fitXY" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/android_width_20"
            android:gravity="center|left"
            android:maxLines="1"
            android:text="@string/search"
            android:textColor="@color/black"
            android:textSize="@dimen/android_text_size_16" />

        <TextView
            android:id="@+id/content"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/android_width_20"
            android:ellipsize="end"
            android:gravity="center|left"
            android:maxLines="1"
            android:textColor="#04841e"
            android:textSize="@dimen/android_text_size_14"
            tools:text="abcd" />
    </LinearLayout>
</LinearLayout>
