<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:id="@+id/video_layout"
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                xmlns:android_custom="http://schemas.android.com/apk/res-auto">

    <io.vov.vitamio.widget.VideoView
        android:id="@+id/video_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:visibility="visible"
        android:id="@+id/preview_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY"/>

    <com.sanbafule.sharelock.chatting.view.RoundProgressBar
        android:layout_centerInParent="true"
        android:id="@+id/progressBar"
        android:layout_width="@dimen/android_width_178"
        android:layout_height="@dimen/android_width_178"
        android_custom:roundColor="@color/android_bai_color"
        android_custom:roundProgressColor="@color/android_bai_color"
        android_custom:roundWidth="@dimen/android_width_10"
        android_custom:textColor="@color/main_color"
        android_custom:textIsDisplayable="false"
        android_custom:style="FILL"
        android_custom:textSize="18sp"/>

</RelativeLayout>