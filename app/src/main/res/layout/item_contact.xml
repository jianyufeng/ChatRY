<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/user_item_selector"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="true"
        android:gravity="center_vertical"
        android:minHeight="@dimen/android_width_108"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/contact_heard_iv"
            android:layout_width="@dimen/android_width_72"
            android:layout_height="@dimen/android_width_72"
            android:layout_marginLeft="@dimen/android_width_20"
            android:scaleType="fitXY"
            android:src="@drawable/icon_touxiang_persion_gray"

            />

        <LinearLayout
            android:layout_width="0dip"
            android:layout_height="@dimen/android_width_108"
            android:layout_marginLeft="-10dp"
            android:layout_marginRight="@dimen/SmallPadding"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_tag"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:src="@drawable/copper"
                android:visibility="gone" />

            <TextView
                android:id="@+id/contact_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/android_width_30"
                android:ellipsize="end"
                android:gravity="center|left"
                android:maxLines="1"
                android:textColor="@color/textColorPrimary"
                android:textSize="@dimen/android_text_size_16" />

        </LinearLayout>

        <CheckBox
            android:id="@+id/contactitem_select_cb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="@dimen/LargerPadding"
            android:checked="false"
            android:clickable="false"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:visibility="gone" />
    </LinearLayout>

    <View style="@style/tv_line" />
</LinearLayout>