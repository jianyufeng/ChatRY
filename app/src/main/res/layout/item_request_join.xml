<?xml version="1.0" encoding="utf-8"?>
<!--
  加入 群组请求列表的每一项
 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="@dimen/android_width_146"
                android:descendantFocusability="blocksDescendants"
                android:paddingLeft="@dimen/android_width_20"
                android:paddingRight="@dimen/android_width_20">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/android_width_86"
        android:layout_height="@dimen/android_width_86"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:scaleType="fitXY"
        android:src="@drawable/group_default_icon"/>

    <LinearLayout
        android:id="@+id/select_reply"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone">

        <Button
            android:id="@+id/agree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/agree"/>

        <Button
            android:id="@+id/reject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/reject"/>
    </LinearLayout>

    <TextView
        android:id="@+id/applicant_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/icon"
        android:layout_marginLeft="@dimen/android_width_20"
        android:layout_toLeftOf="@id/select_reply"
        android:layout_toRightOf="@id/icon"
        android:ellipsize="end"
        android:gravity="left|center"
        android:singleLine="true"
        android:textSize="@dimen/android_text_size_16"
        tools:text="群名dffsfsfsfsfsfsdfdsf"/>

    <TextView
        android:id="@+id/request_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/icon"
        android:layout_marginLeft="@dimen/android_width_20"
        android:layout_toLeftOf="@id/select_reply"
        android:layout_toRightOf="@id/icon"
        android:ellipsize="end"
        android:gravity="left|center"
        android:singleLine="true"
        android:textSize="@dimen/android_text_size_14"
        tools:text="申请加入群组 啊啊"/>

    <TextView
        android:id="@+id/select_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:visibility="gone"
        tools:text="@string/agreed"/>


</RelativeLayout>