<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/main_item_background"
              android:descendantFocusability="blocksDescendants"
              android:gravity="center_vertical"
              android:orientation="horizontal"
              android:padding="@dimen/android_width_20">

    <ImageView
        android:id="@+id/icon"
        style="@style/Heard_Iv"
        android:src="@drawable/icon_touxiang_persion_gray"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/android_width_20"
        android:layout_marginRight="@dimen/android_width_20"
        android:layout_weight="1"
        android:orientation="vertical">


        <TextView
            android:id="@+id/name"
            style="@style/Base_TextView_Black"
            android:textSize="@dimen/android_text_size_16"
            tools:text="fsdfssfsfs"/>

        <TextView
            android:id="@+id/content"
            style="@style/Base_TextView"
            android:layout_marginTop="@dimen/android_width_8"
            android:gravity="bottom"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/do_parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/select_p"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/agree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:gravity="center"
                android:padding="0dp"
                android:text="@string/agree"/>

            <Button
                android:id="@+id/reject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/reject"/>

        </LinearLayout>

        <TextView
            android:id="@+id/select_result"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            tools:text="已同意"/>
    </RelativeLayout>


</LinearLayout>