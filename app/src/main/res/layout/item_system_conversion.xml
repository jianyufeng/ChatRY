<?xml version="1.0" encoding="utf-8"?>
<com.sanbafule.sharelock.view.SwipeLayout android:id="@+id/system_sl"
                                          xmlns:android="http://schemas.android.com/apk/res/android"
                                          android:layout_width="match_parent"
                                          android:layout_height="wrap_content">

    <include layout="@layout/item_conversion_msg_menu"/>

    <RelativeLayout
        android:id="@+id/item_system_conversion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:descendantFocusability="blocksDescendants"
        android:orientation="horizontal"
        >

        <ImageView
            android:id="@+id/conversion_system_img"
            style="@style/Heard_Iv"
            android:layout_margin="@dimen/android_width_18"
            android:src="@drawable/ic_launcher"
            />

        <TextView
            android:id="@+id/conversion_system_name"
            style="@style/Base_TextView_Black"
            android:layout_alignTop="@+id/conversion_system_img"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="3dp"
            android:layout_toRightOf="@+id/conversion_system_img"
            android:maxLines="1"
            android:textSize="@dimen/android_text_size_18"
            />

        <TextView
            android:id="@+id/conversion_system_body"
            style="@style/Base_TextView"
            android:layout_alignBottom="@+id/conversion_system_img"
            android:layout_alignLeft="@+id/conversion_system_name"
            android:layout_marginBottom="3dp"
            android:layout_marginLeft="5dp"
            android:maxLines="1"
            />

        <TextView
            android:id="@+id/conversion_system_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/conversion_system_img"
            android:layout_marginRight="@dimen/android_width_18"
            android:layout_marginTop="3dp"
            android:maxLines="1"
            />

        <com.sanbafule.sharelock.view.RoundNumber
            android:id="@+id/conversion_system_unread"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_alignBottom="@+id/conversion_system_img"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="3dp"
            android:layout_marginRight="@dimen/android_width_18"
            android:visibility="invisible"
            />

        <View
            style="@style/tv_line"
            android:layout_alignParentBottom="true"
            />
    </RelativeLayout>

</com.sanbafule.sharelock.view.SwipeLayout>

