<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:background="@drawable/user_item_selector"
                android:orientation="vertical">

    <ImageView
        android:id="@+id/group_member_icon"
        android:layout_width="@dimen/android_width_108"
        android:layout_height="@dimen/android_width_108"
        android:scaleType="fitXY"
        android:src="@mipmap/ic_launcher"/>

    <TextView
        android:id="@+id/group_member_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/group_member_icon"
        android:gravity="center"
        android:maxWidth="@dimen/android_width_108"
        android:singleLine="true"
        tools:text="named"/>

    <TextView
        android:id="@+id/group_member_role"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="群主"
        android:textColor="@android:color/white"
        android:textSize="@dimen/android_text_size_12"
        android:visibility="visible"/>

</RelativeLayout>