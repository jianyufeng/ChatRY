<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2F2F2"
    android:orientation="vertical">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:src="@drawable/unlogin_back"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:text="请登录陌陌"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="@dimen/android_text_size_22" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="10dp"
        android:text="可以和附近的人互动"
        android:textStyle="bold"
        android:textSize="@dimen/android_text_size_18" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:layout_marginBottom="30dp"
        >

        <View
            android:layout_height="1dp"
            style="@style/tv_h" />

        <Button
            android:id="@+id/login_bt"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:textSize="18sp"
            android:textColor="@color/white"
            android:background="@drawable/btn_style_red_select"
            android:gravity="center"
            android:text="@string/login" />

        <View
            android:layout_height="1dp"
            style="@style/tv_h" />

        <Button
            android:id="@+id/register_bt"
            android:layout_width="0dp"
            android:layout_weight="3.5"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:minWidth="100dp"
            android:textSize="18sp"
            android:textColor="@color/text_content"
            android:background="@drawable/btn_style_gray"
            android:text="@string/register" />

        <View
            android:layout_height="1dp"
            style="@style/tv_h" />
    </LinearLayout>


</LinearLayout>