<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fafafa"
    android:visibility="gone"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/android_width_18"
        android:background="#fff"
        >
    <ImageView
        android:id="@+id/a"
        android:layout_width="@dimen/android_width_72"
        android:layout_height="@dimen/android_width_72"
        android:background="@drawable/ic_launcher"
        android:scaleType="fitXY"
        android:layout_margin="@dimen/android_width_18"
        />

    <TextView
        android:id="@+id/b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center|left"
        android:maxLines="1"
        android:text="搜一搜"
        android:textColor="@color/black"
        android:textSize="@dimen/android_text_size_14"
        android:layout_toRightOf="@+id/a"
        android:layout_alignTop="@+id/a"
        android:layout_marginTop="3dp"
        />

    <TextView
        android:id="@+id/content"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/android_width_20"
        android:ellipsize="end"
        android:gravity="center|left"
        android:maxLines="1"
        android:textColor="#04841e"
        android:textSize="@dimen/android_text_size_14"
        android:layout_alignTop="@+id/b"
        android:layout_toRightOf="@+id/b"
        />
        <!--android:layout_below="@+id/b"-->
        <!--android:layout_marginTop="@dimen/android_width_10"-->
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="系统消息"
      android:layout_alignLeft="@+id/b"
      android:layout_alignBottom="@+id/a"
      android:textSize="12sp"
      android:layout_marginBottom="3dp"
      />
    </RelativeLayout>
</RelativeLayout>